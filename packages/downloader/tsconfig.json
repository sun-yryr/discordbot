{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src"
  },
  "ts-node": {
    "esm": true,
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}